@import './../_resources/variables.styl'
@import './../_resources/mixins.styl'

.wrapper-error
  padding 50px
  text-align center
  .header-title
    display block
    float none
    margin 0 auto

.footer-container
  background-color #939598
  color: $color-grey-light
  width 100%
  height 120px
  display flex

.menu-block
  background-image url(/assets/images/logo-gray.png)
  background-repeat no-repeat
  background-position 0 0
  get-global-margin-left()
  margin-top: 15px
  flex: 7 0 0;

.menu-content
  margin-top 40px

.general-menu
  get-font-size(small)
  margin-top 5px
  margin-bottom 10px

.main-menu
  get-font-size(small)

.service-block
  flex: 1 0 0;
  min-width 90px
  position relative

.service-buttons
  position absolute
  top: 16px
  right 17px

.service-buttons span
  margin-left 10px

.nav
  font-weight bold
  list-style none
  margin 0
  padding 0

.nav li
  display inline
  padding-right 15px

.nav a
  display inline-block
  color #d7d8d9
  text-decoration none
  text-transform uppercase

  &:hover
    color $color-primary
