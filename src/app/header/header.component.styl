@import './../_resources/variables.styl'
@import './../_resources/mixins.styl'

.header
  box-sizing(border-box)
  border-bottom 2px solid $color-primary
  min-width $body-min-width
  padding 0 15px
  height 50px
  position relative

  +for_breakpoint(small)
    height auto
    min-height 30px

  &:after
    content 'alpha version'
    color #ff1313
    display block
    position absolute
    bottom 10px
    z-index 100
    right 20px
    opacity 0.6
    font-size 24px

    +for_breakpoint(medium)
      bottom: 14px
      font-size: 16px

    +for_breakpoint(small)
      top 5px
      bottom auto
      font-size 13.5px
      right 43px

.header-title
  text-indent -9999px
  overflow hidden
  background-image url(assets/images/logo.png)
  background-repeat no-repeat
  background-position center center
  width 170px
  background-size 100%
  color white
  float left
  font-size 17px
  line-height $header-height
  margin 0
  +for_breakpoint(small)
    height 30px



.navbar-nav
  list-style none
  padding:0
  margin:0
  position absolute
  z-index 999
  bottom:0
  left 200px

  &.desktop
    +for_breakpoint(small)
      display none

  +for_breakpoint(small)
    //display none
    position static
    padding-top 30px

    &:hover
      display block !important


$menu-bar
  border-radius(3px)
  position absolute
  width 25px
  height 3px
  display block

.menu-mobile
  @extend $menu-bar
  +for_breakpoint(not-small)
    display none

  +for_breakpoint(small)
    top -11px
    height 40px

  cursor pointer
  right 0
  top 0
  transition-duration 0.5s
  width 40px
  height 50px
  position absolute
  z-index 9

  &:hover
    cursor pointer

  .icon
    transition-duration 0.2s
    position absolute
    width 30px
    height 3px
    background-color $color-primary
    top 24px

    &:before, &:after
      transition-duration 0.5s
      background-color $color-primary
      position absolute
      content ""
      width 30px
      height 3px

    &:before
      top -7px

    &:after
      top 7px

  &.open
    .icon
      background-color transparent
      &:before, &:after
        top 0

      &:before
        transform rotate(-45deg)
        -webkit-transform rotate(-45deg)

      &:after
        transform rotate(45deg)
        -webkit-transform rotate(45deg)

/* TRANSLATIONS */

.lang-wrapper
  float: right
  margin: 14px 140px 0 -180px
  position: relative
  color: #425663
  font-size: 14px
  padding: 1px 6px 1px 10px
  border: 1px solid #ffca34
  border-radius: 4px
  cursor: pointer
  .lang-current
    display block
    padding-right 25px
    &:after
      content '\25BC'
      padding 0px 0px 0px 4px
      border-left 1px solid #ffca34
      color #ffca34
      position absolute
      right 4px
  ul
    display none
    position absolute
    list-style none
    z-index 10
    left -1px
    border 1px solid #ffca34
    top 4px
    border-top none
    background #fff
    padding 8px 0 2px 0
    width 100%
    li
      text-align right
      padding 4px 8px
      border-bottom 1px dotted #FFCA34
      margin 0 4px
      &:last-child
        border-bottom none
  ul.selected
    display block
  &:after
    clear both
  &.mobile
    display none

  +for_breakpoint(medium)
    margin-right 100px
    margin-left -85px

  +for_breakpoint(small)
    &.desktop
      display none

    &.mobile
      float none
      display inline-block
      margin 0 0px 10px 10px
      .lang-current
        min-width 100px;

/* SOCIAL */

.wrap-social
  display inline-block
  width 100%
  text-align center

.social-list
  list-style none
  margin 9px 200px 0 0
  padding 0
  float right
  +for_breakpoint(medium)
    margin-right 100px

  &.mobile
    display none
    margin 5px

  +for_breakpoint(small)
    &.desktop
      display none

    &.mobile
      float none
      display inline-block

  li
    float left
    margin-left 8px
    a
      /*
      FIX :: FontAwesome
      color $color-primary
      font-size 25px
      line-height 1.2
      */
      display inline-block

  .ico-plane,
  .yellow-box
    background $color-primary
    border none
    color #fff
    font-size 15px
    margin 5px 0
    border-radius (4px)
    cursor pointer
    outline none
    width 22px
    height 22px
    padding 0

    path
      fill white

  .yellow-box
    text-align center
    line-height 22px

    &.diff
      font-size 12px
      line-height 17px
      i
        position relative
        top -1px

  .ico-plane
    svg
      position relative
      left: -1px
      top: 1px




/* COMPONENT :: MENU */

.nav-expandable
  position relative

  &, *
    box-sizing(border-box)

  .nav-expandable-item
    display inline-block

    +for_breakpoint(small)
      display block
      border-bottom 1px solid #f2f2f2

    a
      color $navbar-default-link-color
      cursor pointer
      display block
      font-family $bariol-light-font-family
      font-size 14px
      line-height 1
      padding 15px
      position relative
      text-transform uppercase
      text-decoration none
      +for_breakpoint(small)
        padding 10px

        &:hover
          text-decoration none

  .nav-expanded:hover + .nav-toggle-expanded
    border-left-color $brand-primary
    border-right-color $brand-primary

  .nav-toggle-expanded
    border-left $navbar-border-size solid transparent
    border-right $navbar-border-size solid transparent
    &.active,
    &:hover
      background-color white
      color $brand-primary

    +for_breakpoint(not-small)
      &:hover + .nav-expanded,
      & + .nav-expanded:hover
        z-index 55
        display block !important

  .nav-expanded
    background-color white
    border-left $navbar-border-size solid $navbar-border-color
    border-right $navbar-border-size solid $navbar-border-color
    border-bottom $navbar-border-size solid $navbar-border-color
    box-sizing border-box
    //display none
    padding 30px 10px
    padding-bottom 10px
    position absolute
    left 0
    width 700px

    +for_breakpoint(not-small)
      display none

      +for_breakpoint(medium)
        left 0
        width 400px

    +for_breakpoint(small)
      width auto
      position static
      padding 4px
      border 0

    .nav-expanded-heading
      make-md-column(12)
      color $color-grey-medium
      display block
      font-family $bariol-bold-font-family
      font-size 17px
      margin-bottom 10px
      text-transform uppercase

    .nav-expanded-more
      make-md-column(12)
      text-align right
      text-transform uppercase

    .nav-expanded-columns
      a
        padding 0

      ul
        padding 0
        list-style none

      &.nav-expanded-columns-1
        make-md-column(6)
        .expanded-column-item
          make-md-column(12)


      &.nav-expanded-columns-2
        make-md-column(12)
        .expanded-column-item
          make-md-column(6)
          +for_breakpoint(medium)
            make-md-column(12)

      &.nav-expanded-columns-icons
        border-bottom 1px solid $color-grey-medium
        margin-bottom 20px
        &:last-child
          border none
          margin-bottom 0


      &.nav-expanded-columns-bulletpoints
        margin-bottom 7px
        .nav-expanded-columns-inner .expanded-column-item
          margin-bottom 5px

        .column-item-icon
          background-color $brand-primary
          border-radius 50%
          width 11px
          height 11px
          top 8px
          span
            display none


        .nav-expanded-columns-inner .expanded-column-item
          .column-item-info
            margin-left 21px
            .column-item-heading,
            .column-item-description
              display inline
              margin-left 0


      &.nav-expanded-columns-plain
        .nav-expanded-columns-inner .expanded-column-item
          .column-item-icon
            display none

          .column-item-info
            .column-item-heading,
            .column-item-description
              margin-left 0


      .nav-expanded-columns-inner
        make-row
        .expanded-column-item
          margin-bottom 20px
          a
            text-transform none
            line-height 31px

          .column-item-icon
            color $brand-primary
            font-size 32px
            position absolute

          .column-item-info
            .column-item-heading,
            .column-item-description
              margin-left 80px
              font-family $bariol-regular-font-family
              font-size 17px
              line-height 1.4

            .column-item-heading
              font-family $bariol-regular-font-family

            .column-item-description
              color $color-grey-medium
              font-size 15px



